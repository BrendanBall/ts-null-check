{
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2018"],
      "target": "es2018",
      "rootDir": "./src",
      "outDir": "./dist",
      "noImplicitAny": false,
      "sourceMap": true,
      "noUnusedLocals": true,
      "allowJs": true,
      "esModuleInterop": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true
  },
  "include": [
      "./src/**/*", "types"
  ],
  "exclude": ["node_modules", "**/*.test.js", "**/__mocks__", "src/handlers/graphql"]
}